[Unit]
Description=Core service of os
After=network.target

[Service]
ExecStart=/home/user3t/miniconda3/envs/craw_data/bin/python /home/user3t/Workspace/projects/in-process/kienvq/main.py

# Thư mục làm việc
WorkingDirectory=/home/user3t/Workspace/projects/in-process/kienvq

# Người chạy service
User=user3t
Group=user3t

# Ghi log vào journal
StandardOutput=journal
StandardError=journal

# Tự khởi động lại nếu crash
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
